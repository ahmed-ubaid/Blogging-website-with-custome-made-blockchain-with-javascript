<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JamiaCoin</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/card.css">
</head>
<body>

    <nav class="navbar navbar-expand-lg bg-body-tertiary bg-primary">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">BlogChain</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">

              <li class="nav-item">
                <a class="nav-link active" href="/add_new">Add block</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

    
    <section class="product"> 
      <button class="pre-btn"><img src="arrow.png" alt=""></button>
      <button class="nxt-btn"><img src="arrow.png" alt=""></button>
      <style>
        .kill{
          border: 2px solid black;
          border-radius: 15px;
        }
        a{
          text-decoration: none;
        }
      </style>
      <div class="product-container">
        <% for(block of blockchain.chain){%>
          <div class="product-card kill overflow-auto">
                <a href="/block/<%=block.hash%>" class="link-secondary link-underline-opacity-0 ">
                  <div class="container-sm oop">
                    <p for="" class="h5">Block hash</p>
                    <p class="block_info text-break "><%=block.hash%></p>

                    <p for="" class="h5">Previous hash</p>
                    <p class="block_info text-break"><%=block.prevHash%></p>

                    <p for="" class="h5">Block Timestamp</p>
                    <p class="block_info text-break"><%=block.timestamp%></p>

                    <p for="" class="h5">Block nonce</p>
                    <p class="block_info text-break"><%=block.nonce%></p>

                    <p for="" class="h5">Mining Difficulty</p>
                    <p class="block_info text-break"><%=block.difficulty%></p>

                    <p for="" class="h5">Block Data</p>
                    <p class="block_info text-break"><%=block.data.blog%></p>
                  </div>

                </a>
          </div>
          <% } %>
      </div>
    </section>

    <script src="/js/card.js"></script>
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</body>
</html>